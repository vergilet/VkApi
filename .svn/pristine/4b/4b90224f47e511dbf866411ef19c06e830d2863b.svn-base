    private void messSenderButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_messSenderButtonActionPerformed
        ReqMethods rm = new ReqMethods();
        JsonParsing gfl = new JsonParsing();
        List<Result> rez;
        try {

            jTextField1.setText(rm.messagesSend(TokenLabel.getText(), friendsBox.getSelectedItem().toString(), messWriteField.getText() + " " + Math.random()));
            //messReadArea.setText(rm.friendsGet(TokenLabel.getText(), friendsBox.getSelectedItem().toString()));
            // for
            rez = gfl.serJosn(rm.friendsGet(TokenLabel.getText()));
            Object[] uid = new Object[rez.size()];
            Object[] fname = new Object[rez.size()];
            Object[] lname = new Object[rez.size()];
            Object[] photo = new Object[rez.size()];
            Object[] online = new Object[rez.size()];
            
            int i = 0;
            for (Result cashResult : rez) {
                uid[i] = cashResult.uid;
                fname[i] = cashResult.first_name;
                lname[i] = cashResult.last_name;
                photo[i] = cashResult.photo;
                online[i] = cashResult.online;
                i++;
            }
            
            jList1.setListData(fname);

        } catch (Exception ex) {
            System.out.println(ex);
        }









    }//GEN-LAST:event_messSenderButtonActionPerformed

    public void tokenRetriver(String login, String pass) {
        //Виконання нашого кліента в бекграунді
        HttpVkClient clientObj = new HttpVkClient(TokenLabel, login, pass);
        clientObj.execute();
    }

